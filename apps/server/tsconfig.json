{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",

		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"sourceMap": true,

		"resolveJsonModule": true,
		"module": "commonjs",

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@common": ["src/common"],
			"@marketplace/shared-packages": ["../../shared-packages/dist"]
		}
	},
	"references": [{ "path": "../../shared-packages" }],
	"include": ["src"]
}
